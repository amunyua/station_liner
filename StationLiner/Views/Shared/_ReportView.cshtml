@using StationLinerDataEntities.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title | Ims</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @* @Scripts.Render("~/bundles/modernizr")*@
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- DataTables -->
    <!-- iCheck for checkboxes and radio inputs -->
    <!-- Theme style -->
    <link rel="stylesheet" href="@Url.Content("~/Content/dist/css/AdminLTE.min.css")">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="@Url.Content("~/Content/dist/css/skins/_all-skins.min.css")">


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

        @{Html.RenderPartial("partials/_Header"); }
        <!-- Left side column. contains the logo and sidebar -->
        @{Html.RenderPartial("partials/_SideMenu"); }

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    @RenderSection("PageTitle", false)
                    @*<small>advanced tables</small>*@
                </h1>
                <ol class="breadcrumb">
                    @RenderSection("BreadCrumbs", false)
                </ol>
            </section>

@*            <div class="pad margin no-print">*@
@*                <div class="callout callout-info" style="margin-bottom: 0!important;">*@
@*                    <h4><i class="fa fa-info"></i> Note:</h4>*@
@*                    This page has been enhanced for printing. Click the print button at the bottom of the invoice to test.*@
@*                </div>*@
@*            </div>*@

            <!-- Main content -->
            @{
                var db = new IMSDataEntities();
                var setting = db.GeneralSettings.FirstOrDefault();
                <section class="invoice">
                    <!-- title row -->
                    <div class="row">
                        <div class="col-xs-12">
                            <h2 class="page-header">
                                <i class="fa fa-globe"></i> @setting.CompanyName
                                <small class="pull-right">Date: @DateTime.Now</small>
                            </h2>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- info row -->
                    <div class="row invoice-info">
                        <div class="col-sm-4 invoice-col">
@*                            From*@
                            <address>
                                <strong>@setting.CompanyName</strong><br>
                                @setting.Location<br/>
                                Phone: @setting.Contact1<br>
@*                                Email: info@almasaeedstudio.com*@
                            </address>
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
@*                            To*@
@*                            <address>*@
@*                                <strong>John Doe</strong><br>*@
@*                                795 Folsom Ave, Suite 600<br>*@
@*                                San Francisco, CA 94107<br>*@
@*                                Phone: (555) 539-1037<br>*@
@*                                Email: john.doe@example.com*@
@*                            </address>*@
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                            <b>PIN:</b> @setting.PinNumber<br>
                            <b>VAT:</b> @setting.VAT<br>
                            <br>
                            
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                    <!-- Table row -->
@*                    <hr/>*@
                    <div class="row">
                        <div class="col-xs-12 table-responsive">
                            @RenderBody()
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->


                    <!-- /.row -->
                    <!-- this row will not appear when printing -->
                    <div class="row no-print">
                        <div class="col-xs-12"
                             style="margin-top: 20px;">
                            <a href="" onclick="window.print();" class="btn btn-default"><i class="fa fa-print"></i> Print</a>
                            @*                        <button type="button" class="btn btn-success pull-right">*@
                            @*                            <i class="fa fa-credit-card"></i> Submit Payment*@
                            @*                        </button>*@
                            @*                        <button type="button" class="btn btn-primary pull-right" style="margin-right: 5px;">*@
                            @*                            <i class="fa fa-download"></i> Generate PDF*@
                            @*                        </button>*@
                        </div>
                    </div>
                </section>
            }
            <!-- /.content -->
            <div class="clearfix"></div>
        </div>
        <!-- /.content-wrapper -->


        <!-- Control Sidebar -->
        @{Html.RenderPartial("partials/_Footer"); }
        <!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery 2.2.3 -->
    <!-- jQuery 2.2.3 -->
    <script src="@Url.Content("~/Content/plugins/jQuery/jquery-2.2.3.min.js")"></script>
    <script src="@Url.Content("~/Content/plugins/fastclick/fastclick.js")"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")"></script>
    <!-- FastClick -->
    <script src="@Url.Content("~/Content/dist/js/app.min.js")"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="@Url.Content("~/Content/dist/js/demo.js")"></script>
</body>
</html>
