@model StationLinerDataEntities.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}
 @section BreadCrumbs{
     <li>Products</li>
     <li>
         @Html.ActionLink("Manage Products", "Index")
     </li>
     <li class="active">Create Product</li>
        }
       @section PageTitle{
           Products
           }
     @section Description{Create a new product}
@section FormTitle{ Create a new product}

