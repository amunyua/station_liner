                @Html.ValidationMessageFor(model => model.EndTime, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="pull-right col-md-10">
            <div class="actions col-md-offset-6">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </div>
    </div>
